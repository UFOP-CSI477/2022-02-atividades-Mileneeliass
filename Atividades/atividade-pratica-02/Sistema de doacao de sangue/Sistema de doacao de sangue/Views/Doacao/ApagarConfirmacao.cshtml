@model DoacaoModel
@{
    ViewData["Title"] = "Confirmação apagar a doação";
}

<div class="text-center">
    <h3>Realmente deseja apagar a doação?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Doacao" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Doacao" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>